<div class="container">
    <div id="products" class="row list-group">
        <% @listings.verified.each do |l|%>
        
        <div class="item col-sm-6 col-xs-12 col-md-4" style="min-height: 450;">
            <div class="thumbnail">
                <div id="listing-<%= l.id %>" class="carousel slide" data-interval="false">
                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <% if l.photos.count == 0%>
                        <li data-target="#listing-<%= l.id %>" data-slide-to="0" class="active"></li>
                    <% else %>
                        <li data-target="#listing-<%= l.id %>" data-slide-to="0" class="active"></li>
                        <% (l.photos.count - 1).times do |index| %>
                            <li data-target="#listing-<%= l.id %>" data-slide-to="<%= index + 1 %>"></li>
                        <% end %>
                     <%end %>   
                  </ol>

                  <!-- Wrapper for slides -->
                  <div class="carousel-inner" role="listbox" style="width:100%; height: 320px !important;">
                    <div class="item active">
                      <%= image_tag l.photos.first, class: "img-responsive" %>
                    </div>
                      <% l.photos.shift %>
                      <% l.photos.each do |photos|%>  
                    
                    <div class="item"> 
                      <%= image_tag photos, class: "img-responsive" %> 
                    </div>
                      <% end %>  
                  </div>

                  <!-- Left and right controls -->
                  <a class="left carousel-control" href="#listing-<%= l.id %>" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#listing-<%= l.id %>" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
                <div class="caption">
                    <p class="group inner list-group-item-text">
                        <%= l.property_type%> Â· <%= l.number_of_beds%> Beds</p>

                    <h4 class="group inner list-group-item-heading">
                        <%= link_to l.listing_name, "/listings/#{l.id}" %></h4>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                From RM<%= l.price %> per night</p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

